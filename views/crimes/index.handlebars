{{#if logged_in}}
<h3 class="text-center">These are our recently lost paws. Please help us find them!</h3> 
<div class="container">
<div class="row text-center" id ="holder">
    {{#each crimes}}
        <div class="col-sm-6 col-md-4">
        <div id="thumbnail" class ="thumbnail">
        <img src="{{link}}" id="thumbimg">
	        <div class = "caption">
	        <h2>{{name}}</h2>
	        <h3>{{date}}</h3>
	        <p>{{case}}</p>
	        <p><a href="/readmore/{{name}}"><button class="btn btn-default">Read More</button></a></p>
	        </div>
	    </div>
	    </div>
    {{/each}}
</div>
</div>
{{/if}}