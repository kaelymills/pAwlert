	<div class="container">

  		<form class="create-update-form" action="/api/new" method="POST">
		<h3><strong>Enter a Lost Paw</strong></h3>

		<h4>Name</h4>
		<input type="text" name="name" id="name" class="form-control" required >

		<h4>Link to Photo Image</h4>
		<input type="text" name="link" id="photo" class="form-control" required >

		<h4>Date (mm/dd/yy)</h4>
		<input type="text" name="date" id="date" class="form-control" required >

		<h4>Email:</h4>
		<input type="text" name="email" id="email" class="form-control" required >

		<h4>Short Description:</h4>
		<input type="text" name="case" id="case" class="form-control" required >		


		<br>
		<br>
		<button type="submit" class="btn btn-default btn-lg btn-block" id="add"><span class="glyphicon glyphicon-check"></span>
 		Submit</button>
  		</form>
	</div>
		<script type="text/javascript">
		$('#add').on('click', function () {
			var newcrime = {

				name: $('#name').val().trim(),
				photo: $('#photo').val().trim(),
				date: $('#date').val().trim(),
				case: $('#case').val().trim(),
				email: $('#email').val().trim(),
			 };
			 $('input:text').val('');
			$.post('http://localhost:3000/api/new', newcrime)
				.done(function (data) {
					console.log(data);
				});

			
		});
	</script>